# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space

[*.{java,xml}]
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[{*.yaml,*.yml}]
indent_size = 2

[*.sql]
indent_size = 2
max_line_length = off

[Makefile]
indent_style = tab
